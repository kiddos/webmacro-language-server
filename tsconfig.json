{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "strict": false,
    "sourceMap": true,
    "outDir": "./build",
    "sourceRoot": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
